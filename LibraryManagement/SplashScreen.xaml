<Window x:Class="LibraryManagement.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None"  WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Icons/b1.jpg" />
    </Window.Background>

    <StackPanel VerticalAlignment="Center">
        <Image Source="Icons/l2.png" Height="140" Width="140">
        </Image>

        <TextBlock FontSize="26"
                   Foreground="White"
                  Background="Black"
                   TextAlignment="Center"
                   FontFamily="Times New Roman"
                   FontWeight="Bold"
            Text="Library Management System" />
    </StackPanel>
</Window>